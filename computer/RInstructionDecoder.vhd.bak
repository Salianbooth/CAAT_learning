library ieee;
use ieee.std_logic_1164.all;

entity RInstructionDecoder is
    port (
        func     : in  std_logic_vector(2 downto 0);
        Rtype    : out std_logic
    );
end RInstructionDecoder;

architecture Behavioral of RInstructionDecoder is
begin
    process (func)
    begin
        case func is
            when "000" =>
                Rtype <= '1';
                
            when "001" =>
                Rtype <= '0';
                
            -- Add more cases for other func values

            when others =>
                -- Default case
                Rtype <= '0';
        end case;
    end process;
end Behavioral;
